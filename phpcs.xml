<?xml version="1.0"?>
<ruleset name="App Ruleset">
    <description>Custom coding standard for app</description>
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>helpers</file>
    <file>packages</file>
    <file>routes</file>

    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>tests</exclude-pattern>
    </rule>

    <rule ref="./vendor/fossbarrow/laravel-phpcs/phpcs.xml"/>
</ruleset>
